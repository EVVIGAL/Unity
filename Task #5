using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Door : MonoBehaviour
{
    [SerializeField] private Alarm _alarm;

    private void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.TryGetComponent<Player>(out Player player))
        {
            _alarm.isEntered(true);
        }
    }

    private void OnTriggerExit2D(Collider2D collision)
    {
        if (collision.TryGetComponent<Player>(out Player player))
        {
            _alarm.isEntered(false);
        }
    }
}

public class Alarm : MonoBehaviour
{
    [SerializeField] private AudioSource _audioSource;
    private float _minVolume = 0.0f;
    private float _maxVolume = 1.0f;
    private float _increaseRate = 0.2f;
    private bool _alarmIsActivated = false;

    private void Start()
    {
        _audioSource.volume = _minVolume;
    }

    public void isEntered(bool isEntered)
    {
        _alarmIsActivated = isEntered;
        StartCoroutine(RunAlarm());
    }

    public IEnumerator RunAlarm()
    {
        if (_audioSource.volume >= _minVolume)
        {
            while (_alarmIsActivated)
            {
                if (!_audioSource.isPlaying)
                {
                    _audioSource.Play();
                }

                _audioSource.volume += Mathf.MoveTowards(_minVolume, _maxVolume, _increaseRate * Time.deltaTime);
                yield return null;
            }

            while (!_alarmIsActivated)
            {
                _audioSource.volume -= Mathf.MoveTowards(_minVolume, _maxVolume, _increaseRate * Time.deltaTime);
                yield return null;

                if (_audioSource.isPlaying && _audioSource.volume == _minVolume)
                {
                    _audioSource.Stop();
                }
            }
        }
    }
}
